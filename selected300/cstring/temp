#include "..\..\head.h"

class Solution {
public:
    int myAtoi(string s) {
        int res = 0;
        int bndry = INT_MAX / 10;
        int i = 0;
        int sign = 1;
        int len = s.size();
        if (len == 0)
            return 0;
        while (s[i] == ' ') {
            if (++i = len)
                return 0;
        }
        if (s[i] == '-')
            sign = -1;
        if (s[i] == '-' || s[i] == '+')
            i++;
        for (int j = i; j < len; j ++) {
            if (s[j] < '0' || s[j] > '9')
                break;
            if (res > bndry || res == bndry && s[j] > '7') {
                return sign == 1 ? INT_MAX : INT_MIN;
            }
            res = res * 10 + (s[j] - '0');
        }
        return sign * res;
    }
};